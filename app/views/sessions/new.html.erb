

<div class="d-flex">
<%= image_tag("man.png")%>
<div class="m-3 mt-5 shadow rounded p-5 col-6">
<h1>Login</h1>
<%= form_with url: "/login", method: :post do |form| %>

  
  <div class="form-floating m-3 shadow rounded">
    
    <%= form.text_field :email,class:"form-control",placeholder:"email" %>
    <%= form.label :email %>
  </div>
   <div class="form-floating m-3 shadow rounded">
    
    <%= form.password_field :password,class:"form-control",placeholder:"password" %>
    <%= form.label :password %>
  </div>

   <div class="row justify-content-center mb-4">
    <%= form.submit "Login", class:"btn btn-outline-dark col-4 " %>
  </div>
<% end %>
</div>

</div>
<%= link_to '[Cancel and go back to Jewellery page]' , root_path,id:"back"%>